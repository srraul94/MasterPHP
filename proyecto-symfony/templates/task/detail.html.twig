{% extends 'base.html.twig' %}

{% block title %}{{task.title}}{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h2>{{task.title}}</h2>
    <p class="data-task">
        {{task.user.name}} {{task.user.surname}} | Fecha: {{task.createdAt|date('d-m-y')}} | 
        {% if task.priority == 'high' %}
            {{ 'Alta' }} !!!
        {% endif %}
        {% if task.priority == 'medium' %}
            {{ 'Media' }} !!
        {% endif %}
        {% if task.priority == 'low' %}
            {{ 'Baja' }} !
        {% endif %}
        | {{task.hours}}h
    </p>
    <p>{{task.content}}</p>

</div>
{% endblock %}
